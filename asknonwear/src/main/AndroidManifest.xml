<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <service
        android:name=".YourMessageListenerService"
        android:exported="true"> <!-- Importante para recibir mensajes del sistema -->
        <intent-filter>
            <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
            <!-- Escucha especÃ­ficamente el path del conteo de preguntas -->
            <data
                android:host="*"
                android:pathPrefix="/pending_questions_count"
                android:scheme="wear" />
        </intent-filter>
    </service>

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <activity android:name=".WearActivity" />
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        <service
            android:name=".YourMessageListenerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />

                <data
                    android:host="*"
                    android:pathPrefix="/pending_questions_count"
                    android:scheme="wear" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.android.wearable.capabilities"
            android:value="asknon_wear_app_capability" />
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />

        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".GlanceActivity"
            android:exported="true"
            android:taskAffinity=""
            android:theme="@style/AsknonWearTheme.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".QuickViewActivity"
            android:taskAffinity="" />
    </application>

</manifest>