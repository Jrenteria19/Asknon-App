<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Habilita ejecución en TV sin requerir pantalla táctil -->
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" /> <!-- Compatible con lanzadores de TV -->
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:banner="@mipmap/ic_launcher"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Asknon">
        <activity
            android:name=".ProjectionActivity"
            android:exported="true"
            android:label="@string/title_activity_projection"
            android:theme="@style/Theme.Asknon"
            tools:ignore="MissingClass">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>